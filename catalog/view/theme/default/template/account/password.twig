{{ header }}
      {{ column_left }}
    <div class="she-center col-sm-9 col-xs-12 per-setting">

      <h3 class="she-tl-h3">Edit Password</h3>

      <div class="she-center-editpass">
        <form class="formlist list-input" action="https://www.shein.com/index.php?model=account_setting&amp;action=password#" name="theForm" method="post" onsubmit="return check_form();">
          <p>If  you want to change your password, you can edit it here.</p>
          <div class="form-group" style="margin-bottom: 40px; margin-top: 0px;">
            <label style="margin-top: 48px;">Old Password:
              <font color="#FF0000">*</font>
            </label>
            <input class="form-control" name="old_password" size="21" maxlength="40" id="old_password" type="password">

          </div>
          <div class="form-group" style="margin-top: 0px; margin-bottom: 0px;">
            <label style="margin-top: 0px;">New Password:

              <font color="#FF0000">*</font>
            </label>
            <input class="form-control" placeholder="" name="password" size="21" maxlength="40" id="password" onkeyup="this.value=this.value.replace(/\s+/g,'')" type="password">

          </div>
          <div class="form-group" style="margin-top: 0px; margin-bottom: 0px;">
            <label style="margin-top: 20px;">Confirm Password:

              <font color="#FF0000">*</font>
            </label>
            <input class="form-control" placeholder="" name="password1" size="21" maxlength="40" id="password1" onkeyup="this.value=this.value.replace(/\s+/g,'')" type="password">
          </div>
          <div class="formbtn">
            <button name="submit" type="submit" class="she-btn-black">update</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
