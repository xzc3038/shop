<div class="product-review">
  <br class="clear" />
<div class="custom-reviews j-review-custom" style="position: relative;">
  <div id="to_review">
  </div>
  <h3> Customer Reviews ( <span> {{ reviewsTotol }} </span> ) </h3>
  <div class="summary dts-summary">
    <div class="rating" style="margin-left: 11.5%;">
      <div class="rating-ctn">
        <span class="key"> Average Rating </span>
        <div class="star">
            {% for i in 1..5 %}
              <span class="fa fa-stack"><i class="fa fa-star fa-stack-1x {{ ratingTotol < i ? 'off' }}"></i></span>
            {% endfor %}
        </div>
      </div>
    </div>
    <div class="fit-well">
      <span class="fit-well-title"> Did the item fit well? </span>
      <div class="filter-wrap">
        <ul class="filter-list">
          <li class="filter-item">
            <div class="filter-title-box">
              <span class="key-title"> five </span>
            </div>
            <div class="fit-well-bar">
              <div class="bar">
                <span class="bar-unfill"> <span class="bar-fill five-bar" style=""> </span> </span>
              </div>
            </div>
          </li>
          <li class="filter-item">
            <div class="filter-title-box">
              <span class="key-title"> four </span>
            </div>
            <div class="fit-well-bar">
              <div class="bar">
                <span class="bar-unfill"> <span class="bar-fill four-bar" style=""> </span> </span>
              </div>
            </div>
          </li>
          <li class="filter-item">
            <div class="filter-title-box">
              <span class="key-title"> three </span>
            </div>
            <div class="fit-well-bar">
              <div class="bar">
                <span class="bar-unfill"> <span class="bar-fill three-bar" style=""> </span> </span>
              </div>
            </div>
          </li>
          <li class="filter-item">
            <div class="filter-title-box">
              <span class="key-title"> two </span>
            </div>
            <div class="fit-well-bar">
              <div class="bar">
                <span class="bar-unfill"> <span class="bar-fill two-bar" style=""> </span> </span>
              </div>
            </div>
          </li>
          <li class="filter-item">
            <div class="filter-title-box">
              <span class="key-title"> one </span>
            </div>
            <div class="fit-well-bar">
              <div class="bar">
                <span class="bar-unfill"> <span class="bar-fill one-bar" style=""> </span> </span>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="review-details" style="position: relative;">
    <div class="row goods-reivew-item">
      <div class="col-md-3 goods-review-pageinfo">
        <div>
          &nbsp;
        </div>
      </div>
      <div class="col-md-9">
        <div class="goods-review-size fl">
          {#<span> <em style="font-style: normal;"> size </em> <i class="iconfont">  </i> </span>#}
          {#<ul>#}
            {#<li> All </li>#}
            {#<li> XS </li>#}
            {#<li> S </li>#}
            {#<li> M </li>#}
            {#<li> L </li>#}
          {#</ul>#}
        </div>
        <div class="goods-review-picture fl">
          {#<span> Image <i class="iconfont">  </i> </span>#}
          {#<ul>#}
            {#<li class="select-size"> All </li>#}
            {#<li class=""> With Picture </li>#}
            {#<li class=""> No Picture </li>#}
          {#</ul>#}
        </div>
        {#<div class="goods-review-list">#}
          {#<div class="list-item">#}
            {#<div class="item-drop j-reivew-list fr">#}
              {#<span class="she-drop-normal btn1" id="main"> Recommend <i class="iconfont">  </i> </span>#}
              {#<ul class="she-drop-normal-ul">#}
                {#<li class="select-size show" id="Recommend" onclick="review('Recommend')">  Recommend </li>#}
                {#<li class="show" id="Recent" onclick="review('Recent')">Most Recent to Oldest  </li>#}
                {#<li class="show" id="Oldest" onclick="review('Oldest')">Oldest to Most Recent  </li>#}
                {#<li class="show" id="Likes" onclick="review('Likes')"> Likes High to Low </li>#}
              {#</ul>#}
            {#</div>#}
            {#<div class="item-drop fr" style="padding-right: 5px;">#}
              {#Sort by#}
            {#</div>#}
          {#</div>#}
        {#</div>#}
      </div>
    </div>
    <!---->
      {% if reviews %}
      {% for review in reviews %}
    <div class="item row">
      <div class="user col-md-3">
        <div class="user-msg">
          <span class="username"> {{ review.author }} </span>
          <span class="if-verified"> <i class="iconfont" style="font-size: 12px; font-style: normal; color: rgb(34, 34, 34); margin-right: 5px;">  </i> Verified Purchase </span>
          <!---->
        </div>
      </div>
      <div class="comment-ctn col-md-9">
        <div class="comment-character review_para">
          <div class="rating">
              {% for i in 1..5 %}
                <span class="fa fa-stack"><i class="fa fa-star fa-stack-1x {{ review.rating < i ? 'off' }}"></i></span>
              {% endfor %}
          </div>
          <div class="size">
            &nbsp;
            {#Item Size:#}
            {#<div class="pos-wrap">#}
              {#<span class="size-val"> L </span>#}
            {#</div>#}
          </div>
          <!---->
          <div class="publish-time">
            <span> {{ review.date_added }} </span>
          </div>
          <p class="remark"> {{ review.text }}</p>
        </div>
        <div class="comment-img pic-wrap" data-swiper-index="0">
          {% if review.status %}
            <img src="{{ review.image }}" style="height: 100px;margin-right: 5px;margin-bottom: 5px;cursor: pointer;position: relative;vertical-align: top;"/>
          {% endif %}
        </div>
        {#<div class="reviw_issue">#}
          {#<div class="praise-wrap">#}
            {#<em> Was this review helpful to you? </em>#}
            {#<i data-operation="1" class="iconfont icon-praise">  </i>#}
            {#<label> 2 </label>#}
          {#</div>#}
        {#</div>#}
        <!---->
      </div>
    </div>
      {% endfor %}
  </div>
  <div class="row goods-review-page">
    <div class="col-md-3">
      <div>
          {{ pagination }}
      </div>
    </div>
  </div>
    {% else %}
      <p style="text-align: center">{{ text_no_reviews }}</p>
    {% endif %}
</div>
</div>

