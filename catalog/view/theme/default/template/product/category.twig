{{ header }}
<div class="j-list-cate-inner  c-list-cate-inner">

  <div class="mgds-goodsl  container-fluid-1200  j-mgds-goodsl-wrap">
    <ul class="c-breadcrumb">
      <li> <a rel="nofollow" href="/">Home</a> </li>
      <!-- 实体 -->
      <li><a href="">Sale</a></li>
      <!-- dailynew -->
    </ul>
    <!--部分虚拟分类 & discount-list & promo-discount 会有banner-->
    <!-- discount-list -->
    <!-- topbanner 配置 -->
    <div class="she-clearfix">
      <div></div>
    </div>
    <!--排序 & 结果总数-->
    <div class="list-line" style="">
      <div class="line-center">
        <span class="j-search-num">{{ heading_title }}</span>
      </div>
    </div>
    <!-- 列表项 -->
    <div class="row">
      {% for product in products %}
      <div class="c-goodsli j-goodsli j-goodsli-450271 col-lg-3 col-sm-4 col-xs-6" preload="1">
        <!-- 占位, 勿删 -->
        <div class="gds-li-ratiowrap"></div>

        <div style="height: 90px"></div>
        <!-- 占位, 勿删 -->
        <div class="c-goodsli-absolute">
          <div class="j-switch-color-wrap">
            <div class="gds-li-ratiowrap">
              <a href="{{ product.href }}" class="gds-li-ratioimg j-item-msg j-item-msg-a" target="_blank" index="2" title="{{ product.name }}"> <img style="width:405px;height:552px;" src="{{ product.thumb }}" class="j-verlok-lazy loaded" data-was-processed="true" /> </a>
              <!-- add to bag 用的遮罩 -->
              <span class="add-result-mask add-bag-mask j-add-result-mask-556827" style="display: none;">
     <div class="result-txt j-result-txt" style="display: none;"></div>
     <div class="la-ball-pulse la-ball-pulse-sm j-la-ball-pulse">
      <div></div>
      <div></div>
      <div></div>
     </div> </span>
              <!-- 切换颜色 用的遮罩 -->
              <span class="add-result-mask j-color-loader-556827" style="display: none;">
     <div class="la-ball-pulse la-ball-pulse-sm">
      <div></div>
      <div></div>
      <div></div>
     </div> </span>
            </div>
            <a class="goods-name" href="{{ product.href }}" target="_blank" title="{{ product.name }}">{{ product.name }}</a>
            <div class="btm-price j-gds-li-price j-gds-li-price-556827 she-show" style="display: none">
              <span class="disc-price j-price-discount" style="display: none"></span>
              <span class="btm-sale j-price-sale-txt" style="display: none">(Sale)</span>
              <span class="orig-price j-price-original">{{ product.price }}</span>
            </div>
            <!-- quick view & add to bag -->
            {#<button class="she-btn-white-opacity she-btn-s quickv-btn j-gds-li-qvbtn" data-id="556827" data-index="2"> QUICK VIEW </button>#}
            <button class="she-btn-white-opacity she-btn-s quickv-btn j-qv-loading" style="display: none;">
              <div class="la-ball-pulse">
                <div></div>
                <div></div>
                <div></div>
              </div> </button>
            <div class="btm-wrap">
              <div class="btm-icon">
                <div class="btm-icon-comment j-btm-goods-comment" data-id="556827">
                  <i class="iconfont icon-no-comment j-btm-comment-icon" ref="commentIcon"></i>
                  <div class="btm-comment-tip j-btm-comment-tip " ref="commentTip" style="display: none">
                    <span class="comment-arrow-ctn"><span class="comment-arrow"></span></span>
                    <div class="no-comment-img">
                      <div class="comment-img-ctn j-comment-img-ctn" data-src="//img.ltwebstatic.com/origin/images2_pi/2018/08/27/15353520202706500465_im_405x552.jpg" data-webp="//img.ltwebstatic.com/origin/images2_pi/2018/08/27/15353520202706500465_im_405x552.jpg" style="background-image: url(&quot;//img.ltwebstatic.com/origin/images2_pi/2018/08/27/15353520202706500465_im_405x552.jpg&quot;);"></div>
                    </div>
                  </div>
                </div>
                <div class="btm-icon-save j-gds-li-save j-gds-li-save-556827" data-id="556827" data-sku="tee180807705" data-index="2">
                  <i class="iconfont icon-like-hollow with-arrow-bottom j-save-icon" onclick="wishlist.add('{{ product.product_id }}');"> </i>
                  <div class="btm-save-tip j-btm-save-tip" style="display: none;" >
                    Save to Wishlist
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      {% endfor %}
    </div>

  </div>
    <!-- 侧边栏配置（实体分类和虚拟分类） -->

        <div class="cate-leftnav"  >
            <div class="line-dropdown">
                <div class="sort-by-title">
                    Sort By
                </div>
                <div class="line-dropdown-sort" >
                    <div class="c-dropdown j-toggle-menu" >
                        {{ include(helper.template('_partial/product/filter_bar_block')) }}
                    </div>
                </div>
                {% if categories_x %}
                    {% for category in categories_x %}
                        <div class="category-list j-attrauto-list" >
                            <ul class="list-classify-filter">
                                <li class="filter-title j-attr-auto">
                                    <div class=" j-filter-up-info">
                                        <span> <a href="{{ category.href }}"></a> {{ category.name }}</span>
                                        <i class="iconfont iconfont_x icon-down " id="{{ category.name }}"></i>
                                    </div>
                                    <div class="filter-dropdown {{ category.name }}">
                                        {% for child in category.children %}
                                            <div class="attr-filter-third j-subattr-auto">
                                                <a href="{{ child.href }}" class=" j-auto-attrlink">{{ child.name }} </a>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </li>
                            </ul>

                        </div>
                    {% endfor %}
                {% endif %}
            </div>



        </div>

</div>

<script>

$('.iconfont_x').click(function () {

    var id = this.id;

    $('.'+id).addClass("she-hide");
    $('#' + id).attr("class", "iconfont icon-up "+id+'a');
    $('.' + id+'a').click(function(){
        $('.'+id).removeClass("she-hide");
        $('#' + id).attr("class", "iconfont icon-down");
        history.go(0);
    });
});
</script>
{{ footer }}
